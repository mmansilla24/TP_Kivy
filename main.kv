# En este archivo le agregamos todas las cosas lokis que querramos
<ProductosCRUD>:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "ID:"
        TextInput:
            id: txt_id
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Nombre:"
        TextInput:
            id: txt_nombre
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Descripci√≥n:"
        TextInput:
            id: txt_desc
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Precio:"
        TextInput:
            id: txt_precio
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Stock:"
        TextInput:
            id: txt_stock
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Agregar"
            on_release: root.agregar_producto()
        Button:
            text: "Buscar"
            on_release: root.buscar_producto()
        Button:
            text: "Actualizar"
            on_release: root.actualizar_producto()
        Button:
            text: "Borrar"
            on_release: root.borrar_producto()
    Label:
        id: lbl_mensaje
